<div class="depot_form">
	<%= simple_form_for(@user) do |f| %>
	  <%= f.error_notification %>
		<fieldset>
			<legend>Enter User Details</legend>
		  <div class="form-inputs">
		    <%= f.input :name %>
		    <%= f.input :password %>
		    <%= f.input :password_confirmation %>
		  </div>
		  <div class="form-actions">
		    <%= f.submit %>
		  </div>
		</fieldset>
	<% end %>
</div>